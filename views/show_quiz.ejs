<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz App</title>

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;1,100;1,200;1,300;1,400;1,500&family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;1,300;1,600&display=swap"
    rel="stylesheet">

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/show_quiz.css" type="text/css" />

  <!-- App JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>

  <%- include('partials/_header'); %>

    <!-- Top nav bar (fixed) -->

    <!-- Page-specific (main) content here -->
  <main class="show-quiz">
    <form action="post" action=/quizzes/<%=  %>>
      <h4 class="show-quiz-title">Quiz title</h4>

      <!-- Quiz Container -->

      <article class="question-box">
        <header><h5 class="show-quiz-question">Question</h5></header>
        <div class="show-quiz-alternatives">
          <label for="question1-alternative-1">
            <input type="radio" id="question1-alternative-1" name="question1-alternative" required>Alternative</input>
          </label>
          <label for="question1-alternative-2">
            <input type="radio" id="question1-alternative-2" name="question1-alternative">Alternative</input>
          </label>
          <label for="question1-alternative-3">
            <input type="radio" id="question1-alternative-3" name="question1-alternative">Alternative</input>
          </label>
          <label for="question1-alternative-4">
            <input type="radio" id="question1-alternative-4" name="question1-alternative">Alternative</input>
          </label>
        </div>
      </article>
      <footer>
        <button class="submit-button" type="submit">Submit</button>
      </footer>
    </form>
  </main>
</body>
</html>
