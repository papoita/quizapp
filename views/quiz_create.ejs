<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Quiz App</title>

    <!-- External CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;1,100;1,200;1,300;1,400;1,500&family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;1,300;1,600&display=swap" rel="stylesheet">

    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/quiz_create.css" type="text/css" />

    <!-- App JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>

    <!-- Top nav bar (fixed) -->

    <%- include('partials/_header'); %>

    <!-- Page-specific (main) content here -->

    <main class="quiz-create">
      <form method="post" action="/api/quizzes">
        <header class="create-quiz-header">
          <h4 class="page-title">Create a new quiz</h4>
          <div>
            <input type="text" class="quiz-title" name="quiz_name" placeholder="Enter your quiz title">
              <label name="is-public" class="switch">
                <input type="checkbox" name="is_public" value="TRUE"> Make quiz public
              </label>
          </div>
        </header>
        <section class="questions-container">
        </section>
        <footer class="quiz-buttons">
          <button class="add-question-bttn" type="button" name="add-question">+ Add Question</button>
          <button class="create-quiz-bttn" type="submit" name="create-quiz">Create quiz</button>
        </footer>
      </form>
    </main>
  </body>
</html>
