<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Quiz App</title>

    <!-- External CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;1,100;1,200;1,300;1,400;1,500&family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;1,300;1,600&display=swap" rel="stylesheet">

    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />

    <!-- App JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>

    <!-- Top nav bar (fixed) -->

    <%- include('partials/_header'); %>

    <!-- Page-specific (main) content here -->

    <main>
      <section id="create-quiz-header">
        <span id="page-title">Create a new quiz</span>
        <form method="post" action="">
          <input type="text" name="quiz-title" placeholder="Enter your quiz title">
          <label class="switch">
            <input type="checkbox">
            <span class="slider round">Public quiz</span>
          </label>
      </section>
        <section id="question-box">
          <input type="text" name="question" placeholder="Enter a question">
          <input type="text" name="correct-answer" placeholder="Correct answer">
          <input type="text" name="wrong-answer1" placeholder="Wrong answer">
          <input type="text" name="wrong-answer2" placeholder="Wrong answer">
          <input type="text" name="wrong-answer3" placeholder="Wrong answer">
        </section>
        <section id="quiz-buttons">
          <button name="add question">+ Add Question</button>
          <button name="create-quiz">Create quiz</button>
      </section>
        </form>
    </main>
  </body>
</html>
